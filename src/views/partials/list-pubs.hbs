<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Pub</th>
            <th>City</th>
            <th>Country</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        {{#each publist.pubs}}
            <tr>
                <td>
                    {{name}}
                </td>
                <td>
                    {{city}}
                </td>
                <td>
                    {{country}}
                </td>
                <td>
                    <a href="/publist/{{../publist._id}}/deletepub/{{_id}}" class=""ui icon button">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>