{{> menu}}

<div class="columns is-desktop">
    <div class="column is-narrow">
        <section class="section">
            <div class="box" style="width: 300px;">
                {{> dashboard-menu active="a-pubs"}}
            </div>
        </section>
    </div>
    <div class="column">
        <section class="section">
                <div class="box">
                    <h1 class="title">{{title}}</h1>
                    <h2 class="subtitle">
                        {{subtitle}}
                    </h2>
                </div>
                <div class="box">
                    <div class="card">
                    <div class="card-image">
                        <figure class="image is-256x256">
                            <img src={{pub.img}}>
                        </figure>
                    </div>
                </div>
                <form action="/pub/{{pub._id}}/image/upload" class="box" method="POST" enctype="multipart/form-data">
                    <div id="file-select" class="file has-name is-fullwidth">
                        <label class="file-label"> <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg">
                        <span class="file-cta">
                            <span class="file-icon">
                            <i class="fas fa-upload"></i>
                            </span>
                            <span class="file-label">
                            Choose a fileâ€¦
                            </span>
                        </span>
                        <span class="file-name"></span>
                        </label>
                    </div>
                    
                    <p>&nbsp;</p>
                    <div class="field is-grouped is-grouped-right">
                        <p class="control">
                            <button class="button is-light">Cancel</button>
                        </p>
                        <p class="control">
                            <a href="/pub/{{pub._id}}/image/delete" class="button is-danger">Delete</a>
                        </p>
                        <p class="control">
                            <button type="submit" class="button is-primary">Save</button>
                        </p>
                    </div>

                </form>
            </section>
    </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>